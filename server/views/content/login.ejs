<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-12">
            <div class="login" id="contentArea">
                <br>
                <h2 class="mt-5 mb-3 text-muted text-center">Log In</h2>

                <% if(messages.length > 0){ %>
                    <div id = "messageArea" class="alert alert-danger">
                        <%= messages %>

                    </div>

                <% } %>

                <form id="loginForm" novalidate>

                    <div class="form-group mb-2">
                        <div class="input-group">
                            <label for="username" class="input-group-text">Username:</label>
                            <input type="text" class="form-control" id="username" name="username" required
                                   value="" placeholder="Enter your username">
                        </div>
                    </div>

                    <div class="form-group mb-2">
                        <div class="input-group">
                            <label for="password" class="input-group-text">Password:</label>
                            <input type="password" class="form-control" id="password" name="password" required
                                   value="" placeholder="Enter your password">
                        </div>
                    </div>
                    <br>
                    <div class="text-end">
                    <button id="loginButton" type="button" class="btn btn-primary btn-lg"><i class="fas fa-sign-in-alt"> Login</i></button>
                    <!-- Scripting Section <div class="text-right">-->
                    <button id="cancelButton" type="button" class="btn btn-warning btn-lg"><i class="fas fa-undo"> Cancel</i></button>
                    </div>
                </form>
                <br>
            </div>
        </div>
        <br>
        <a class="text-center text-muted small">
            Don't have an account?
            <a href="./register" style="color: #000; text-decoration: underline;">Register Here!</a>
        </a>
    </div>
</div>
